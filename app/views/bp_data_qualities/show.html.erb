            <li><%= link_to _('To Results').html_safe, bp_result_url(@bp_product) %></li>
            <li><%= link_to _('To Economic Data'), bp_economic_url(@bp_product) %></li>
          </ul>
        </div>
      </div>


      <div class="clear"></div>


    </div>

	
	
